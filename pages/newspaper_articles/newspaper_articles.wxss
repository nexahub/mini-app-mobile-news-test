.articlesContainer {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  background-color: #f8f8f8;
  padding: 0 15px;
}

.top {
  width: 100%;
  display: flex;
  align-items: center;
  gap: 10px;
  padding: 10px 0;
  border-bottom: 1.5px solid;
  border-bottom-color: #ededed;
}

.topChildImage {
  height: 50px;
  width: 20%;
  background-color: #cecece;
}

.topChildText {
  width: 80%;
  text-align: start;
  font-size: 13px;
  font-weight: bold;
}

.articles {
  margin-top: 20px;
  width: 100%;
}

.article {
  width: 100%;
  display: flex;
  gap: 10px;
  border-bottom: 2px solid;
  border-bottom-color: #ededed;
  padding: 3px 0;
  margin-bottom: 5px;
}

.articleImage {
  height: 60px;
  width: 30%;
  background-color: #cecece;
}

.articleDetailsContainer {
  width: 70%;
  display: flex;
  flex-direction: column;
}

.articleRecap {
  text-align: start;
  font-size: 16px;
  font-weight: bold;
}

.articleDescription {
  text-align: start;
  font-size: 10px;
}

.articleTypes {
  width: 100%;
  display: flex;
  gap: 5px;
}

.type {
  text-align: center;
  font-size: 7px;
  background-color: #ff7901;
  border-radius: 50px;
  padding: 0 6px;
  font-weight: bold;
  display: flex;
  align-items: center;
}

.newspaperType {
  text-align: center;
  font-size: 7px;
  background-color: #545454;
  border-radius: 50px;
  padding: 2px 6px;
  display: flex;
  align-items: center;
  text-align: start;
  color: #FFFFFF;
}
