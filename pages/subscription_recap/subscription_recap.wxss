.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    padding: 0 14px 20px 14px;
    box-sizing: border-box;
    /* background-color: #f8f8f8; */
}

.recapContainer {
    margin-bottom: 20px;
    display: flex;
    width: 90%;
    flex-direction: column;
    padding: 19px 16px;
    background-color: #ffffff;
    border-radius: 8px;
    border: 1.5px solid;
    border-color: #e3e3e3;
}

.recapContainer1Title {
    font-size: 14px;
    color: #ff7900;
    font-weight: bold;
}

.recapContainer1SubTitle {
    margin-top: 5px;
    font-size: 10px;
}

.recapContainer1Title2 {
    font-size: 10px;
    color: #9e9e9e;
}

.bar {
    margin: 10px 0;
    height: 1.5px;
    width: 100%;
    background-color: #cfcfcf;
}

.recapContainer2 {
    display: flex;
    width: 90%;
    flex-direction: column;
    padding: 19px 16px 0 16px;
    background-color: #ffffff;
    border-top: 1.5px solid;
    border-left: 1.5px solid;
    border-right: 1.5px solid;
    border-color: #e3e3e3;
    border-top-left-radius: 8px;
    border-top-right-radius: 8px;
}

.recapContainer2SubTitle {
    font-size: 10px;
    font-weight: bold;
}

.balanceContainer {
    margin-top: 12px;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.banlanceContainerLeading {
    display: flex;
    align-items: center;
}

.banlanceContainerLeading1 {
    height: 31.15px;
    width: 29px;
    background-color: #fff2e6;
    border-radius: 5px;
}

.banlanceContainerLeading2 {
    margin-left: 8px;
    display: flex;
    flex-direction: column;
}

.amountRecapContainer {
    margin-bottom: 80px;
    padding: 15.5px 14px;
    display: flex;
    align-items: center;
    width: 92.6%;
    justify-content: space-between;
    border-bottom-left-radius: 8px;
    border-bottom-right-radius: 8px;
    background-color: #fff2e6;
}

.recapContainer3Title {
    margin-bottom: 20px;
    font-size: 14px;
    color: #ff7900;
    font-weight: bold;
}
