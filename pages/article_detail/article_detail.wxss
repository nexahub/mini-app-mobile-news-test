.detailsContainer {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    box-sizing: border-box;
    background-color: #f8f8f8;
    padding: 0 15px 10px 15px;
}

.top {
    width: 100%;
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 10px 0;
    border-bottom: 1.5px solid;
    border-bottom-color: #ededed;
}

.topChildImage {
    height: 50px;
    width: 20%;
    background-color: #cecece;
}

.topChildText {
    width: 80%;
    text-align: start;
    font-size: 13px;
    font-weight: bold;
}

.image {
    height: 200px;
    width: 100%;
    margin-top: 10px;
    border-radius: 10px;
    background-color: #cecece;
}

.descriptionText {
    width: 100%;
    margin-top: 10px;
    text-align: start;
    font-size: 14px;
    font-weight: bold;
}

.typeContainer {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: end;
}

.type {
    text-align: center;
    font-size: 8px;
    background-color: #ff7901;
    border-radius: 50px;
    padding: 2px 6px;
    font-weight: bold;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: start;
    font-weight: bold;
}

.bar {
    height: 1px;
    width: 100%;
    margin-top: 5px;
    background-color: #cecece;
}

.articleText {
    display: flex;
    align-items: start;
    font-size: 12px;
}
